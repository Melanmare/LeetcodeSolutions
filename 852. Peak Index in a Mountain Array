class Solution {
    public int peakIndexInMountainArray(int[] A) {
            int b=0;
	        for(int i=1;i<A.length-1;i++)
	        {
	            if(A[i]>A[i-1]&&A[i]>A[i+1])
	            {
	                System.out.println(i);
                    b=i;
	                
	            }
	        }
			return b;
	    }
}
